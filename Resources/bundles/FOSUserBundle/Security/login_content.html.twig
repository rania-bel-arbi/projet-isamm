{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<head>
    <meta charset="UTF-8">
    <title>Login</title>


    <link rel='stylesheet prefetch' href="{{ asset('http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css') }}">

    <link rel="stylesheet" href="{{ asset('template_login/css/style.css') }}">


</head>

<div class="wrapper">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">Please login</h2>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input  class="form-control" type="text" id="username" name="_username" placeholder="username" value="{{ last_username }}" required="required" autocomplete="username"  /><br>


        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control"  placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password"/>
        <label class="checkbox">
            <input type="checkbox"  id="remember_me" name="_remember_me" value="on" > Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Login</button>
    </form>
</div>
